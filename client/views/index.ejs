    <script>
        function send_btn() {
            document.getElementById('logo_center').style.display = "none"
        }
        window.onload = function() { 
            const close_btn = document.getElementById("close_btn") 
            const sidebar = document.getElementById("sidebar")
            const hidden_text1 = document.getElementById("hidden_text1")
            const hidden_text2 = document.getElementById("hidden_text2")
            const textareaEle = document.getElementById('input_text')
            const chatArea = document.getElementById("chatArea")
            const option_btn = document.getElementById("option_btn")
            const optional = document.getElementsByClassName('optional')
            const text = document.getElementById("text")
            const url = document.getElementById("url")
            const file = document.getElementById("file")
            const text_option = document.getElementById("text_option")
            const url_option = document.getElementById("url_option")
            const file_option = document.getElementById("file_option")
            const upload_file = document.getElementById("upload_file")
            const form = document.getElementById("form")
            const formData = new FormData();
            const logout_button = document.getElementById("logout_button")
            const history_data = document.getElementsByClassName("history_data")

            logout_button.addEventListener('click', function(event) {
                  // Hiển thị cảnh báo
                const confirmLogout = confirm('Are you sure you want to log out?');

                // Nếu người dùng không xác nhận, ngăn chặn sự kiện click
                if (!confirmLogout) {
                event.preventDefault();
                }
            });

            upload_file.addEventListener('change', function() {
                document.getElementById("label_upload_file").textContent = this.files[0].name
            })

            text_option.addEventListener('click', function() {
                text.style.display = "block"
                url.style.display = "none"
                file.style.display = "none"
                for (let i = 0; i < optional.length; i++) {
                    optional[i].style.opacity = "0"
                    optional[i].style.transitionDuration = "100ms"
                }
                option_btn.style.height = "41px"
            })

            url_option.addEventListener('click', function() {
                text.style.display = "none"
                url.style.display = "block"
                file.style.display = "none"
                for (let i = 0; i < optional.length; i++) {
                    optional[i].style.opacity = "0"
                    optional[i].style.transitionDuration = "100ms"
                }
                option_btn.style.height = "41px"
            })

            file_option.addEventListener('click', function() {
                text.style.display = "none"
                url.style.display = "none"
                file.style.display = "block"
                for (let i = 0; i < optional.length; i++) {
                    optional[i].style.opacity = "0"
                    optional[i].style.transitionDuration = "100ms"
                }
                option_btn.style.height = "41px"
            })

            option_btn.addEventListener('mouseover', function() {
                for (let i = 0; i < optional.length; i++) {
                    optional[i].style.opacity = "1"
                    optional[i].style.transitionDuration = "500ms"
                }
                option_btn.style.height = "120px"
                document.getElementById("arrow").style.transform = "rotate(180deg)"
            })

            option_btn.addEventListener('mouseleave', function() {
                for (let i = 0; i < optional.length; i++) {
                    optional[i].style.opacity = "0"
                    optional[i].style.transitionDuration = "100ms"
                }
                option_btn.style.height = "41px"
                document.getElementById("arrow").style.transform = "rotate(0deg)"
            })

            close_btn.addEventListener('click', function() {
                if (parseInt(sidebar.style.width) > 100) {
                    sidebar.style.width = "64px"
                    hidden_text1.style.opacity = "0"
                    hidden_text2.style.opacity = "0"
                    hidden_text1.style.transitionDuration = "100ms"
                    hidden_text2.style.transitionDuration = "100ms"
                    for (let i = 0; i < history_data.length; i++) {
                        history_data[i].style.opacity = "0"
                        history_data[i].style.transitionDuration = "100ms"
                        history_data[i].style.width = "20px"
                    }
                } else {
                    sidebar.style.width = "224px"
                    hidden_text1.style.opacity = "1"
                    hidden_text2.style.opacity = "1"
                    hidden_text1.style.transitionDuration = "500ms"
                    hidden_text2.style.transitionDuration = "500ms"
                    for (let i = 0; i < history_data.length; i++) {
                        history_data[i].style.opacity = "1"
                        history_data[i].style.transitionDuration = "300ms"
                        history_data[i].style.width = "175px"
                    }
                }
            })
            textareaEle.addEventListener("keyup", handleTextAreaResize);
            textareaEle.addEventListener("input", handleTextAreaResize);
            textareaEle.addEventListener("paste", handleTextAreaResize);

            function handleTextAreaResize() {
                if (textareaEle.scrollHeight <= 200) {
                    textareaEle.style.height = 'auto';
                    textareaEle.style.height = `${textareaEle.scrollHeight}px`;
                    chatArea.style.height = `${textareaEle.scrollHeight + 27}px`;
                }
            }
        }
        

    </script>
